	<Window id="menu" role="leftWindow">

		<TableView id="innermenu">
			
			<TableViewRow class="menuitem" tab="tab_news">
				<View class="viewitem">
        			<Label icon="fa-newspaper-o" />
        			<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
        			<Label text="News" />
				</View>				
			</TableViewRow>
			
			<TableViewRow class="menuitem" tab="tab_product">
				<View class="viewitem">
        			<Label icon="fa-suitcase" />
        			<Widget id="fa" src="com.mattmcfarland.fontawesome"/>					
